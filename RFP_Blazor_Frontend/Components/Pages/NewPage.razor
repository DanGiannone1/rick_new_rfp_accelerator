@page "/newpage"
@rendermode InteractiveServer
<style>
    .clearChatBroom {
        box-sizing: border-box;
        margin-top: 55px;
        padding: 8px;
        width: 40px;
        height: 40px;
        left: 12px;
        top: 66px;
        color: #FFFFFF;
        border: 1px solid #D1D1D1;
        border-radius: 20px;
        z-index: 1;
    }
</style>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mx-auto my-5">
    <MudGrid Justify="Justify.Center">
        <!-- Left Side: List of Available RFPs -->
        <MudItem xs="3">
            <MudPaper Class="pa-6" Style="height:50vh" Elevation="12">
                <MudStack Justify="Justify.Center">
                    <AvailRFPs />
                </MudStack>        
            </MudPaper>
        </MudItem>

        <!-- Center: Status Window -->
        <MudItem xs="6">
            <MudPaper Class="pa-4" Style="height:50vh" Elevation="12">
                <MudText Typo="Typo.h6">Status Window</MudText>
            </MudPaper>
        </MudItem>

        <!-- Right Side: Artifacts -->
        <MudItem xs="3">
            <MudPaper Class="pa-4" Style="height:50vh" Elevation="12">
                <MudText Typo="Typo.h6">Artifacts</MudText>
                <MudButton Variant="Variant.Outlined" Color="Color.Primary" FullWidth="true">Download</MudButton>
            </MudPaper>
        </MudItem>

        <!-- Bottom: AI Response and User Prompt -->
        <MudItem xs="12">
               <Chat />
        </MudItem>

    </MudGrid>
</MudContainer>

