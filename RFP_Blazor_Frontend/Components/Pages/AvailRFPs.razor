@* @page "/mytest" *@
@rendermode InteractiveAuto

<MudPaper Width="400px" Elevation="12">
    <MudList Clickable="true" Style="height:36vh; overflow: auto;">
        <MudListSubheader>
            Available RFPs
        </MudListSubheader>
        @for (var i = 0; i < 10; i++) // add a bunch of items to test the scroll bars.
        {
            <MudListItem Icon="@Icons.Material.Filled.DocumentScanner">
                RFP @i
            </MudListItem>
        }
    </MudList>
</MudPaper>
<MudStack Style="width:400px">
    <MudToolBar DisableGutters="true" Class="gap-4 z-30">
        <MudFileUpload T="IBrowserFile" FilesChanged="UploadFiles">
            <ButtonTemplate>
                <MudButton HtmlTag="label"
                           Variant="Variant.Outlined"
                           Color="Color.Primary"
                           StartIcon="@Icons.Material.Filled.CloudUpload"
                           for="@context.Id">
                    Select File
                </MudButton>
            </ButtonTemplate>
        </MudFileUpload>
        <MudText Typo="Typo.h6">@selectedFile</MudText>
    </MudToolBar>
    <MudButton Variant="Variant.Outlined" Color="Color.Primary">Upload</MudButton>
</MudStack>

@code
{
    List<string> RFPs = new List<string>();
    IList<IBrowserFile> files = new List<IBrowserFile>();
    string selectedFile = "No file selected!";
    private void UploadFiles(IBrowserFile file)
    {
        files.Add(file);
        selectedFile = file.Name;
        //TODO upload the files to the server
    }
}






